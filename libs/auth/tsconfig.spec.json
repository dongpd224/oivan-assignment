{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [
      "vitest/globals",
      "vitest/importMeta",
      "vite/client",
      "node",
      "vitest"
    ]
  },
  "include": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "data-access/src/**/*.ts",
    "domain/src/**/*.ts",
    "feature/src/**/*.ts",
    "ui/src/**/*.ts",
    "**/src/**/*.spec.ts",
    "**/src/**/*.test.ts"
  ],
  "files": ["src/test-setup.ts"]
}
